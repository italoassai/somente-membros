
<%if user_signed_in?%>
<div class="container", style="margin-top:30px;">
    <%@posts.each do |post|%>

     <p style="margin-top:40px"> <strong>User:</strong> <%= post.user.email%></p>
    <h3 ><%= post.title%></h3>
    <p><%= post.description%></p>
    <%end%>
    <%=link_to "New Post", new_post_path, class:"nav-link" %>
</div>



<%else%>

 <div class="container", style="margin-top:30px";>
    <%@posts.each do |post|%>

    <h3 style="margin-top:40px"><%= post.title%></h3>
    <p><%= post.description%></p>
    <%end%>
</div>
<%end%>









